<Page x:Class="MenuList.Views.Pages.CreateDatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuList.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="Добавление данных.">

    <Grid>

        <!--Кнопка навигации назад.-->
        <Button
            Style="{StaticResource btnBack}"
            Name="btnBack"
            Click="btnBack_Click"/>

        <!--Основной СтэкПанель.-->
        <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            
            <TextBlock
                TextAlignment="Center"
                Text="Введите, какое количество данных сгенерировать:"/>
            
            <!--ТекстБокс для ввода количества генерируемых значений.-->
            <TextBox
                Name="TxbCount"
                Margin="0 10"
                PreviewTextInput="TxbCount_PreviewTextInput"
                />
            
            
            <Button
                Content="Сгененрировать"
                Height="25"
                Width="300"
                Name="BtnGenerate"
                Click="BtnGenerate_Click"/>
        </StackPanel>
        
        
    </Grid>
</Page>
